@model InstructorEditVM

@{
    ViewData["Title"] = "Edit";
}

<section id="instructor-edit-area">
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label>Full name</label>
            <input autocomplete="off" asp-for="FullName" class="form-control" maxlength="300">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Email</label>
            <input autocomplete="off" asp-for="Email" class="form-control" type="text" maxlength="300">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Address</label>
            <input autocomplete="off" asp-for="Address" class="form-control" maxlength="300">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Phone</label>
            <input autocomplete="off" asp-for="Phone" class="form-control" maxlength="300">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Field</label>
            <input autocomplete="off" asp-for="Field" class="form-control" maxlength="300">
            <span asp-validation-for="Field" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <img src="~/img/@Model.Image" />
        </div>
        <div class="form-group mb-3">
            <label>Upload Image</label>
            <input asp-for="NewImage" accept="image/*" class="form-control">
            <span asp-validation-for="NewImage" class="text-danger"></span>
        </div>
        @foreach (var item in Model.InstructorSocials)
        {
            <ul class="mb-3 list-group list-group-flush">
                <li class="list-group-item">
                    <i class="@item.Icon" style="font-size:25px"></i>
                    <a class="mx-5" href="@item.Link">@item.Link</a>
                    <a class="btn btn-danger delete-social"
                       data-instructorId="@item.InstructorId"
                       data-socialId="@item.SocialId"
                       data-link="@item.Link">
                        Delete
                    </a>
                </li>
            </ul>
        }
        <div>
            <button type="submit" class="btn btn-primary me-2 mt-3">Submit</button>
            <a class="btn btn-light mt-3" asp-action="Index">Cancel</a>
        </div>
    </form>
</section>

@section js {
    <script src="~/admin/dist/js/delete.js"></script>
}

