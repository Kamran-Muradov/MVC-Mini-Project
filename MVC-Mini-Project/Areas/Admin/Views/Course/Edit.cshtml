@model CourseEditVM

@{
    ViewData["Title"] = "Edit";
}

<section id="edit-area">
    <div>
        <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
            <div class="row">
                @foreach (var item in Model.Images)
                {
                    <div class="col-3 pr-1 position-relative @(item.IsMain ? "hide-btn" : "show-btn")">
                        <img src="~/img/@item.Name"
                             class="mb-2 mw-100 w-100 rounded @(item.IsMain ? "image-main" : "")"
                             alt="image"
                             style=" height:200px;" />
                        <div class="operations">
                            <a class="btn btn-info btn-icon set-main position-absolute"
                                    data-id="@item.Id"
                                    data-courseId="@item.CourseId"
                                    title="Set as main image"
                                    style="left:41%;top:20%;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-photo"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M15 8h.01" /><path d="M3 6a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v12a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3v-12z" /><path d="M3 16l5 -5c.928 -.893 2.072 -.893 3 0l5 5" /><path d="M14 14l1 -1c.928 -.893 2.072 -.893 3 0l3 3" /></svg>
                            </a>
                            <a class="btn btn-danger btn-icon img-delete position-absolute"
                                    data-id="@item.Id"
                                    data-courseId="@item.CourseId"
                                    title="Delete image"
                                    style="left:41%;top:55%;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-trash"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M4 7l16 0" /><path d="M10 11l0 6" /><path d="M14 11l0 6" /><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" /><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /></svg>
                            </a>
                        </div>
                    </div>
                }
            </div>
            <div class="form-group mb-3">
                <label>Name</label>
                <input autocomplete="off" asp-for="Name" class="form-control" maxlength="300">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label>Description</label>
                <textarea autocomplete="off" rows="6" asp-for="Description" class="form-control" maxlength="300"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label>Price</label>
                <input autocomplete="off" asp-for="Price" type="number" step="any" class="form-control" maxlength="300">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label>Choose category</label>
                <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-select"> </select>
            </div>
            <div class="form-group mb-3">
                <label>Choose instructor</label>
                <select asp-for="InstructorId" asp-items="@ViewBag.instructors" class="form-select"> </select>
            </div>
            <div class="form-group mb-3">
                <label>Choose rating</label>
                <select asp-for="Rating" class="form-select">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label>Start date</label>
                <input asp-for="StartDate" type="date" class="form-control" maxlength="300">
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label>End date</label>
                <input asp-for="EndDate" type="date" class="form-control" maxlength="300">
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label>Upload Images</label>
                <input asp-for="NewImages" accept="image/*" class="form-control">
                <span asp-validation-for="NewImages" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary me-2 mt-3">Submit</button>
            <a class="btn btn-light mt-3" asp-action="Index">Cancel</a>
        </form>
    </div>

</section>
@section css
{
    <link href="~/admin/dist/css/course.css" rel="stylesheet" />
}

@section js
{
    <script src="~/admin/dist/js/course.js"></script>
}

