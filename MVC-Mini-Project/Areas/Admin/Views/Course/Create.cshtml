@model CourseCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="w-50 m-auto">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label>Name</label>
            <input autocomplete="off" asp-for="Name" class="form-control" maxlength="300">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Description</label>
            <textarea autocomplete="off" rows="6" asp-for="Description" class="form-control" maxlength="300"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Price</label>
            <input autocomplete="off" asp-for="Price" step="any" type="number" class="form-control" maxlength="300">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Choose category</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-select"> </select>
        </div>
        <div class="form-group mb-3">
            <label>Choose instructor</label>
            <select asp-for="InstructorId" asp-items="@ViewBag.instructors" class="form-select"> </select>
        </div>
        <div class="form-group mb-3">
            <label>Choose rating</label>
            <select asp-for="Rating" class="form-select">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="form-group mb-3">
            <label>Start date</label>
            <input asp-for="StartDate" type="date" class="form-control" maxlength="300">
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>End date</label>
            <input asp-for="EndDate" type="date" class="form-control" maxlength="300">
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Upload Images</label>
            <input asp-for="Images" accept="image/*" class="form-control">
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary me-2 mt-3">Submit</button>
        <a class="btn btn-light mt-3" asp-action="Index">Cancel</a>
    </form>

</div>

