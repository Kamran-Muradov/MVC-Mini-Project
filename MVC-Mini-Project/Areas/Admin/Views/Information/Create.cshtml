@model InformationCreateVM

@{
    ViewData["Title"] = "Create";
}

<form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label>Title</label>
        <input autocomplete="off" asp-for="Title" class="form-control">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control" rows="8"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <p class="form-label">Choose Icon</p>
    @foreach (var icon in (IEnumerable<InformationIconVM>)ViewBag.icons)
    {
        <label class="form-check-inline mb-3">
            <input asp-for="InformationIconId" class="form-check-input" value="@icon.Id" type="radio" checked="">
            <i class="form-check-label @icon.Class" style="font-size:25px"></i>
        </label>
    }
    <div>
        <button type="submit" class="btn btn-primary me-2 mt-3">Submit</button>
        <a class="btn btn-light mt-3" asp-action="Index">Cancel</a>
    </div>
</form>


