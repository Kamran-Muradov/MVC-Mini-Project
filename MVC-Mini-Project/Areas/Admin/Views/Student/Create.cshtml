@model StudentCreateVM

@{
    ViewData["Title"] = "Create";
}

<form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label>Full name</label>
        <input autocomplete="off" asp-for="FullName" class="form-control" maxlength="300">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Description</label>
        <textarea autocomplete="off" rows="6" asp-for="Description" class="form-control" maxlength="300"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Email</label>
        <input autocomplete="off" asp-for="Email" class="form-control" type="text" maxlength="300">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Address</label>
        <input autocomplete="off" asp-for="Address" class="form-control" maxlength="300">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Phone</label>
        <input autocomplete="off" asp-for="Phone" class="form-control" maxlength="300">
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Profession</label>
        <input autocomplete="off" asp-for="Profession" class="form-control" maxlength="300">
        <span asp-validation-for="Profession" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Choose course</label>
        <select asp-for="CourseId" asp-items="@ViewBag.courses" class="form-select"> </select>
    </div>
    <div class="form-group mb-3">
        <label>Upload Image</label>
        <input asp-for="Image" accept="image/*" class="form-control">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary me-2 mt-3">Submit</button>
    <a class="btn btn-light mt-3" asp-action="Index">Cancel</a>
</form>


