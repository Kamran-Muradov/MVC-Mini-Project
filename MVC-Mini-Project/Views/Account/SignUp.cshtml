@model RegisterVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/account/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/account/css/style.css">
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <div class="errors" style="color:red;" asp-validation-summary="ModelOnly"></div>
                        <form method="post" asp-action="SignUp" class="register-form" id="register-form">
                            <div class="form-group">
                                <label><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input autocomplete="off" asp-for="FullName" maxlength="300" placeholder="Your Full name" />
                                <span asp-validation-for="FullName" style="color:red"></span>
                            </div>
                            <div class="form-group">
                                <label><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input autocomplete="off" asp-for="Username" maxlength="300" placeholder="Your Username" />
                                <span asp-validation-for="Username" style="color:red"></span>
                            </div>
                            <div class="form-group">
                                <label><i class="zmdi zmdi-email"></i></label>
                                <input autocomplete="off" asp-for="Email" type="text" placeholder="Your Email" />
                                <span asp-validation-for="Email" style="color:red"></span>
                            </div>
                            <div class="form-group">
                                <label><i class="zmdi zmdi-lock"></i></label>
                                <input autocomplete="off" asp-for="Password" placeholder="Password" />
                                <span asp-validation-for="Password" style="color:red"></span>
                            </div>
                            <div class="form-group">
                                <label><i class="zmdi zmdi-lock-outline"></i></label>
                                <input autocomplete="off" asp-for="ConfirmPassword" placeholder="Repeat your password" />
                                <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                            </div>
                            <div>
                                <a asp-action="SignIn" class="signup-image-link" style="display:inline">I am already member</a>
                            </div>
                            <div style="display:inline-block" class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Register"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- JS -->
    <script src="~/account/vendor/jquery/jquery.min.js"></script>
    <script src="~/account/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>
