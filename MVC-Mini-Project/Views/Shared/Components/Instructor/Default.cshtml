@model IEnumerable<InstructorVMVC>

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Instructors</h6>
            <h1 class="mb-5">Expert Instructors</h1>
        </div>
        <div class="row g-4">
            @foreach (var instructor in Model.Take(4))
            {
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="team-item bg-light">
                    <div class="overflow-hidden">
                        <img class="img-fluid" src="~/img/@instructor.Image" alt="">
                    </div>
                    <div class="position-relative d-flex justify-content-center" style="margin-top: -23px;">
                        <div class="bg-light d-flex justify-content-center pt-2 px-1">
                            @foreach (var social in instructor.Socials)
                            {
                            <a class="btn btn-sm-square btn-primary mx-1" href="@social.Link"><i class="@social.Icon"></i></a>
                            }
                        </div>
                    </div>
                    <div class="text-center p-4">
                        <h5 class="mb-0">@instructor.FullName</h5>
                        <small>@instructor.Field</small>
                    </div>
                </div>
            </div>

            }
        </div>
    </div>
</div>


